<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context="com.example.ayooluwa.tiktak.Main2Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tiktaklogo1"
        android:src="@drawable/tictaklogo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp" />

    <ImageView
        android:id="@+id/tiktakimage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tiktaklogo1"
        android:layout_marginTop="100dp"
        android:src="@drawable/tiktakimage"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/singleplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" singleplayer   "
        android:background="@drawable/corners"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp" />

    <Button
        android:id="@+id/multiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  multiplayer    "
        android:background="@drawable/corners"
        android:layout_alignStart="@+id/singleplayer"
        android:layout_alignTop="@+id/singleplayer"
        android:layout_marginTop="65dp" />


</RelativeLayout>
